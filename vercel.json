{
  "version": 2,
  "builds": [
    {
      "src": "api/env.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/browser"
      }
    }
  ],
  "env": {
    "GEMINI_API_KEY": "@GEMINI_API_KEY",
    "SUPABASE_URL": "@SUPABASE_URL",
    "SUPABASE_ANON_KEY": "@SUPABASE_ANON_KEY"
  },
  "routes": [
    { "src": "/api/env", "dest": "/api/env.js" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
